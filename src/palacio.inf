!!------------------------------------------------------------------------------
!! Rutina para esperar una pulsación de tecla del usuario antes de continuar.
!! Si se invoca con el primer parámetro opcional activado (verdadero), la
!! ejecución continúa sin ningún tipo de espera. Si se utiliza el segundo
!! parámetro opcional, la rutina espera a que pase esa cantidad de décimas de
!! segundo antes de continuar con la ejecución normal.
!!
!!	@param {boolean} [cancel=false] - Si es verdadero la rutina no espera a la
!!		pulsación de tecla del usuario y la aplicación puede continuar la
!!		ejecución normalmente
!!	@param {integer} [delay=0] - Si se introduce un entero, espera a que se
!!		cumpla la cantidad 'delay' de décimas de segundo antes de continuar.
!!		En caso contrario, espera a una pulsación de tecla del usuario
!!	@returns {char} Caracter introducido por el usuario
!!	@version 1.2
!!------------------------------------------------------------------------------
[ PressAnyKey cancel delay
	result;
	#Ifdef TARGET_GLULX;
	#Ifdef USE_DAMUSIX;
	if (Damusix.EnFade()) delay = 0;
	#Endif; ! USE_DAMUSIX;
	#Endif; ! TARGET_GLULX;
	if (delay > 0) result = KeyDelay(delay);
	else if (~~cancel) result = KeyCharPrimitive();
	return result;
];

!!------------------------------------------------------------------------------
!! Rutina para imprimir el nombre corto de un objeto. Si se incluye la
!! extensión 'hyperlinks.h' se crea un hipervínculo relacionado con el objeto.
!!
!!	@returns {boolean} Verdadero
!!	@override parserm.h
!!	@version 1.1
!!------------------------------------------------------------------------------
[ PSN__ obj;
    if (obj == 0) { print (string) NOTHING__TX; rtrue; }
    switch (metaclass(obj)) {
      Routine:  print "<routine ", obj, ">"; rtrue;
      String:   print "<string ~", (string) obj, "~>"; rtrue;
      nothing:  print "<illegal object number ", obj, ">"; rtrue;
    }
    if (obj == player) { print (string) YOURSELF__TX; rtrue; }
    #Ifdef LanguagePrintShortName;
    if (LanguagePrintShortName(obj)) rtrue;
    #Endif; ! LanguagePrintShortName
    if (indef_mode && obj.&short_name_indef ~= 0
		&& PrintOrRun(obj, short_name_indef, 1) ~= 0)
		rtrue;
    if (obj.&short_name ~= 0 && PrintOrRun(obj, short_name, 1) ~= 0)
		rtrue;
	#Ifdef USE_HYPERLINKS;
	Hyperlink(obj);
	#Ifnot;
    print (object) obj;
	#Endif; ! USE_HYPERLINKS;
];

!!------------------------------------------------------------------------------
!! Lee de un fichero de texto externo los parámetros de configuración
!! establecidos en una partida previa.
!!
!!	@returns {boolean} Verdadero si lee el fichero con éxito. Falso en
!!		caso contrario
!!	@version 1.0
!!------------------------------------------------------------------------------
[ ReadConfigFile fileName
	file_ref str ch config_parameters i;
	config_parameters = 6;
	#Ifdef TARGET_GLULX;
	file_ref = glk($0061, fileusage_Data + fileusage_BinaryMode,
		ChangeAnyToCString(fileName), 0); ! glk_fileref_create_by_name
	if (file_ref ~= 0) {
		str = glk($0042, file_ref, filemode_Read, 0); ! glk_stream_open_file
		glk($0063, file_ref); ! glk_fileref_destroy
		for (i = 1 : i <= config_parameters : i++) {
			do ch = glk($0090, str); ! glk_get_char_stream
			until ((ch == null) || (ch >= 48 && ch <= 57));
			if (ch == null) break;
			switch (i) {
				1:	_hyperlinks_active_1 = (ch-48);
				2:	_hyperlinks_active_2 = (ch-48);
				3:	_hyperlinks_active_3 = (ch-48);
				4:	_highlight_style_1 = (ch-48);
				5:	_highlight_style_2 = (ch-48);
				6:	_highlight_style_3 = (ch-48);
			}
			do ch = glk($0090, str); ! glk_get_char_stream
			until ((ch == null) || (ch == 10)); ! (hasta nueva línea)
		}
		!! Cierra el archivo:
		glk($0044, str, 0); ! glk_stream_close
		!! Transforma los códigos de estilo a los valores reales:
		print "(", _highlight_style_1, ",";
		switch (_highlight_style_1) {
			1:	_highlight_style_1 = TEXT_STYLE_STRESSED;
			2:	_highlight_style_1 = TEXT_STYLE_NOTE;
			3:	_highlight_style_1 = TEXT_STYLE_IMPORTANT;
			4:	_highlight_style_1 = TEXT_STYLE_HEADER;
			5:	_highlight_style_1 = TEXT_STYLE_MONOSPACED;
			6:	_highlight_style_1 = TEXT_STYLE_REVERSED;
			7:	_highlight_style_1 = TEXT_STYLE_USER1;
			default: _highlight_style_1 = TEXT_STYLE_UPRIGHT;
		}
		print _highlight_style_1, ") ";
		print "(", _highlight_style_2, ",";
		switch (_highlight_style_2) {
			1:	_highlight_style_2 = TEXT_STYLE_STRESSED;
			2:	_highlight_style_2 = TEXT_STYLE_NOTE;
			3:	_highlight_style_2 = TEXT_STYLE_IMPORTANT;
			4:	_highlight_style_2 = TEXT_STYLE_HEADER;
			5:	_highlight_style_2 = TEXT_STYLE_MONOSPACED;
			6:	_highlight_style_2 = TEXT_STYLE_REVERSED;
			7:	_highlight_style_2 = TEXT_STYLE_USER1;
			default: _highlight_style_2 = TEXT_STYLE_UPRIGHT;
		}
		print _highlight_style_2, ") ";
		print "(", _highlight_style_3, ",";
		switch (_highlight_style_3) {
			1:	_highlight_style_3 = TEXT_STYLE_STRESSED;
			2:	_highlight_style_3 = TEXT_STYLE_NOTE;
			3:	_highlight_style_3 = TEXT_STYLE_IMPORTANT;
			4:	_highlight_style_3 = TEXT_STYLE_HEADER;
			5:	_highlight_style_3 = TEXT_STYLE_MONOSPACED;
			6:	_highlight_style_3 = TEXT_STYLE_REVERSED;
			7:	_highlight_style_3 = TEXT_STYLE_USER1;
			default: _highlight_style_3 = TEXT_STYLE_UPRIGHT;
		}
		print _highlight_style_3, ")^";
		!! Comprueba que los valores leídos sean correctos:
		if (i < config_parameters || _hyperlinks_active_1 < 0
			|| _hyperlinks_active_1 > 1)
			_hyperlinks_active_1 = DEFAULT_HYPERLINKS_STATUS;
		if (i < config_parameters || _hyperlinks_active_2 < 0
			|| _hyperlinks_active_2 > 1)
			_hyperlinks_active_2 = DEFAULT_HYPERLINKS_STATUS;
		if (i < config_parameters || _hyperlinks_active_3 < 0
			|| _hyperlinks_active_3 > 1)
			_hyperlinks_active_3 = DEFAULT_HYPERLINKS_STATUS;
		_highlight_style_1 = CheckHighlightStyles(
			_highlight_style_1,
			_hyperlinks_active_1);
		_highlight_style_2 = CheckHighlightStyles(
			_highlight_style_2,
			_hyperlinks_active_2);
		_highlight_style_3 = CheckHighlightStyles(
			_highlight_style_3,
			_hyperlinks_active_3);
		if (i < config_parameters || _highlight_style_1 < 0)
			_highlight_style_1 = DEFAULT_HIGHLIGHT_ST_1;
		if (i < config_parameters || _highlight_style_2 < 0)
			_highlight_style_2 = DEFAULT_HIGHLIGHT_ST_2;
		if (i < config_parameters || _highlight_style_3 < 0)
			_highlight_style_3 = DEFAULT_HIGHLIGHT_ST_3;
		return true;
	}
	#Endif; ! TARGET_GLULX;
	return false;
];

!!------------------------------------------------------------------------------
!! Imprime el pronombre nominativo correcto correspondiente a un objeto.
!!
!!	@param {Object} obj - Obj. del que se desea imprimir su pronombre nominativo
!!	@version 1.0
!!------------------------------------------------------------------------------
[ SpanishNominativePronoun obj;
	switch (GetGNAOfObject(obj)) {
		0, 6:	print "él";
		1, 7:	print "ella";
		2, 8:	print "ello";
		3, 9:	print "ellos";
		4, 10:	print "ellas";
		5, 11:	print "ellos";
   }
];

!!------------------------------------------------------------------------------
!! Dado un objeto como parámetro, retorna su antecesor más lejano en el árbol
!! de objetos del modelo de mundo.
!!
!!	@param {Object} obj - Objeto del que se desea averiguar su antecesor
!!		más lejano
!!	@returns {Object} Antecesor más lejano del objeto pasado como parámetro
!!	@version 1.0
!!------------------------------------------------------------------------------
[ TopHolder obj
	aux;
	while (parent(obj) ~= 0) {
		aux = ObjectScopedBySomething(obj);
		if (aux == 0) aux = parent(obj);
		obj = aux;
	}
	return obj;
];

!!------------------------------------------------------------------------------
!! Guarda en un fichero externo un registro con los parámetros de configuración
!! de la aplicación.
!!
!!	@returns {boolean} Verdadero si escribe el fichero con éxito. Falso en
!!		caso contrario
!!	@version 1.0
!!------------------------------------------------------------------------------
[ WriteConfigFile fileName
	file_ref str i temp_txt temp_code;
	#Ifdef TARGET_GLULX;
	!! Crea el fichero externo y redirige el flujo de salida a él:
	file_ref = glk($0061, fileusage_Data + fileusage_BinaryMode,
		ChangeAnyToCString(fileName), 0); ! glk_fileref_create_by_name
	if (file_ref ~= 0) {
		str = glk($0042, file_ref, filemode_Write, 0); ! glk_stream_open_file
		glk($0063, file_ref); ! glk_fileref_destroy
		glk($0047, str); ! glk_stream_set_current
		!! Escritura en fichero de los parámetros de configuración:
		print _hyperlinks_active_1, " # Hipervínculos asociados a objetos
		destacados {0:desactivados, 1:activados}^";
		print _hyperlinks_active_2, " # Hipervínculos asociados a direcciones
		{0: desactivados, 1:activados}^";
		print _hyperlinks_active_3, " # Hipervínculos asociados a otros objetos
		{0:desactivados, 1:activados}^";
		for (i = 0 : i < 3 : i++) {
			switch (i) {
				0:	temp_code = _highlight_style_1;
					temp_txt = "objetos destacados";
				1:	temp_code = _highlight_style_2;
					temp_txt = "direcciones";
				2:	temp_code = _highlight_style_3;
					temp_txt = "otros objetos";
			}
			switch (temp_code) {
				TEXT_STYLE_UPRIGHT:		temp_code = 0;
				TEXT_STYLE_STRESSED:	temp_code = 1;
				TEXT_STYLE_NOTE:		temp_code = 2;
				TEXT_STYLE_IMPORTANT:	temp_code = 3;
				TEXT_STYLE_HEADER:		temp_code = 4;
				TEXT_STYLE_MONOSPACED:	temp_code = 5;
				TEXT_STYLE_REVERSED:	temp_code = 6;
				TEXT_STYLE_USER1:		temp_code = 7;
			}
			print temp_code, " # Estilo de texto de ", (string) temp_txt,
			" [0-7]^";
		}
		!! Cierra el archivo y termina la operación:
		glk($002F, gg_mainwin); ! glk_set_window
		glk($0044, str, 0); ! glk_stream_close
		return true;
	}
	#Ifnot; ! TARGET_
	fileName = file_ref + str; ! (por evitar alertas del compilador)
	#Endif; ! TARGET_GLULX;
	return false;
];


