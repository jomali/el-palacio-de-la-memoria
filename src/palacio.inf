!!------------------------------------------------------------------------------
!! La aplicación utiliza dos sistemas interconectados de palabras clave e
!! hipervínculos asociados a tres clases de objetos: 1) objetos importantes en
!! el desarrollo de la historia, 2) direcciones y objetos hacia los que el PJ
!! puede desplazarse y 3) otros objetos interactivos. De manera que los estilos
!! disponibles en un momento dado para el sistema de palabras clave dependen de
!! el estado de los hipervínculos de esa clase (si están activados o no). Esta
!! rutina comprueba si una determianda configuración pasada como parámetro de
!! estilo de palabra clave y estado de los hipervínculos de una determinada
!! clase de objetos es compatible, y retorna el estilo que debería utilizarse
!! en caso de no ser así.
!!
!! Si se invoca con el parámetro opcional 'next' activado (==verdadero), el
!! estilo que retorna es el siguiente en la rotación de estilos disponibles
!! para la configuración de estilo y estado pasados como parámetros.
!!
!!	@param {integer} text_style - Código numérico de un estilo de texto
!!		utilizado por una clase de objetos dada
!!	@param {boolean} hyperlink_status - Estado de los hipervínculos para la
!!		misma clase de objetos del primer parámetro 'text_style'
!!	@param {boolean} [next=false] - Si es verdadero, la rutina hace la
!!		comprobación para el siguiente estilo en la rotación de estilos
!!		disponibles
!!	@returns {integer} Código del estilo adecuado para la configuración
!!		pasada como parámetro
!!	@version 1.0
!!------------------------------------------------------------------------------
[ CheckHighlightStyles text_style hyperlink_status next
	result;
	if (next) {
		switch (text_style) {
			TEXT_STYLE_UPRIGHT:
				text_style = TEXT_STYLE_STRESSED;
			TEXT_STYLE_STRESSED:
				text_style = TEXT_STYLE_NOTE;
			TEXT_STYLE_NOTE:
				text_style = TEXT_STYLE_IMPORTANT;
			TEXT_STYLE_IMPORTANT:
				text_style = TEXT_STYLE_HEADER;
			TEXT_STYLE_HEADER:
				text_style = TEXT_STYLE_MONOSPACED;
			TEXT_STYLE_MONOSPACED:
				text_style = TEXT_STYLE_REVERSED;
			TEXT_STYLE_REVERSED:
				text_style = TEXT_STYLE_USER1;
			TEXT_STYLE_USER1:
				text_style = TEXT_STYLE_UPRIGHT;
			default:
				text_style = -1;
		}
	}
	switch (text_style) {
		TEXT_STYLE_UPRIGHT:
			result = TEXT_STYLE_UPRIGHT;
		TEXT_STYLE_STRESSED:
			result = TEXT_STYLE_STRESSED;
		TEXT_STYLE_NOTE:
			if (hyperlink_status) result = TEXT_STYLE_IMPORTANT;
			else result = TEXT_STYLE_NOTE;
		TEXT_STYLE_IMPORTANT:
			result = TEXT_STYLE_IMPORTANT;
		TEXT_STYLE_HEADER:
			if (hyperlink_status) result = TEXT_STYLE_MONOSPACED;
			else result = TEXT_STYLE_HEADER;
		TEXT_STYLE_MONOSPACED:
			result = TEXT_STYLE_MONOSPACED;
		TEXT_STYLE_REVERSED:
			if (hyperlink_status) result = TEXT_STYLE_USER1;
			else result = TEXT_STYLE_REVERSED;
		TEXT_STYLE_USER1:
			result = TEXT_STYLE_USER1;
		default:
			result = -1;
	}
	return result;
];

