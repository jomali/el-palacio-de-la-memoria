!!==============================================================================
!!
!!	1)	Dungeon Master / Limbo
!!
!!------------------------------------------------------------------------------

Object	dungeon_master ""
;

Room	limbo "En algún lugar"
 with	name_f	'babia',
		name_m	'limbo' 'lugar' 'sueno' 'vacio',
		gender	G_MASCULINO,
		description [;
			O__M(self, 1);
			if (self hasnt visited) O__M(self, 2);
			new_line;
			return true;
		],
		clarification 0,
 has	male;

NPC		-> silvia "Silvia"
 with	name_f	'personaje' 'protagonista' 'silvia',
		gender	G_FEMENINO,
		adjectives 'principal',
		description [; <<Inv>>; ],
 has	female proper;


