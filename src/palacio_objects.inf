!!==============================================================================
!!
!!	8)	Patio delantero
!!
!!------------------------------------------------------------------------------

Indoors	patio "Patio delantero"
 with	name_f	'entrada' 'terraza',
		name_m	'corral' 'patio',
		gender	G_MASCULINO,
		adjectives 'delantera' 'delantero',
		description [;
			return O__M(self, 1);
		],
		n_to	puerta_delantera,
		in_to	[; return self.n_to(); ],
 has	male;

Furniture	puerta_delantera "puerta"
 with	name_f	'puerta',
		gender	G_FEMENINO,
		adjectives 'delantera',
 has	door female ~open;


!!==============================================================================
!!
!!	9)	Recibidor
!!
!!------------------------------------------------------------------------------

Indoors	recibidor "Recibidor"
 with	name_f	'antesala' 'estancia' 'habitacion',
		name_m	'hall' 'recibidor' 'vestibulo',
		gender	G_MASCULINO,
		initial [
			previous_style;
			if (self hasnt visited) {
				O__M(dungeon_master, 1);
				KeyCharPrimitive();
				EraseWindow();
				previous_style = TextFormatter.get_current_style();
				TextFormatter.use_quote();
				O__M(dungeon_master, 2);
				TextFormatter.use(previous_style);
				return true;
			}
		],
		description [;
			if (puerta_delantera hasnt open) O__M(self, 1);
			else O__M(self, 2);
			print " ";
			return O__M(self, 3);
		],
		n_to	salon,
		s_to	puerta_delantera,
		out_to	[; return self.s_to(); ],
 has	male;


