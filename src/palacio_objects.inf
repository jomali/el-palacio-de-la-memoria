Item	PuertaDelantera "puerta de entrada"
 with	found_in Patio Recibidor,
		name_f 'entrada' 'puerta' 'salida',
		gender G_FEMENINO,
		adjectives 'casa' 'delantera' 'principal',
		description [;
			if (location == Patio) return O__M(self, 1);
			return O__M(self, 2);
		],
		door_dir [;
			if (location == Patio) return n_to;
			return s_to;
