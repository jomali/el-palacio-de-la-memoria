			if (Cama.state == 0) i++;
			if (Camisa hasnt moved) i++;
			O__M(self, 1);
			if (Cama.state == 0) {
				O__M(self, 2);
				if (i == 1) O__M(self, 6);
				if (i == 2) O__M(self, 5);
			}
			if (Camisa hasnt moved) {
				O__M(self, 3);
				if (i > 0) O__M(self, 6);
			}
			return O__M(self, 4);
		],
		w_to [;
			if (PuertaDormitorio hasnt open) {
				give PuertaDormitorio open;
				O__M(PuertaDormitorio, 4);
				new_line;
			}
			return PuertaDormitorio;
		],
		out_to [; return self.w_to(); ],
		cant_go [; return O__M(self, 7); ],
		state 0,
 has	male;

